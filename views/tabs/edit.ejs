<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit this tab: <%= tab.songName %></h1>

		<div style="width: 30%; margin:0 auto; margin:25px auto;">
			<form action="/tabs/<%= tab._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%=tab.songName%>" name="tab[songName]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=tab.artist%>" name="tab[artist]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=tab.image%>" name="tab[image]">
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" rows="10" name="tab[description]"><%=tab.description%></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>	
			</form>
			<a href="/tabs">Go Back</a>
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>