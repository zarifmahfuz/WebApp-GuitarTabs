<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add a New Tab</h1>

		<div style="width: 50%; margin:0 auto; margin:25px auto;">
			<form action="/tabs" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="song name" name="songName">
				</div>
				<div class="form-group">
				    <input class="form-control" type="text" placeholder="artist" name="artist" >
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="image">
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="description" placeholder="tab and description" rows="10"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/tabs">Go Back</a>
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>